<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/startbackground">

    <Button
        android:id="@+id/retry"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/replaybutton"
        android:visibility="visible" />

    <Button
        android:id="@+id/start"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="230dp"
        android:background="@drawable/start"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/btn_how_to_play"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_gravity="center"
        android:src="@drawable/howtoplay"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/image_how"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/howww"
        android:background="@drawable/btn_white_6dp"
        android:visibility="gone"/>
</FrameLayout>